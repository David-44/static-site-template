
<%
  var menus = [
    ["Welcome", "Home", "index"],
    ["About Us", "About Us", "about"],
    ["Contact Us", "Contact", "contact"]
  ];
%>

<footer>

  <nav class="visually-hidden" aria-label="main menu">
    <ul>
      <%_ menus.forEach( menu => { _%>
        <%_ if (menu[0] == pageTitle) { _%>
          <li class="nav-menus-item__footer">
            <span class="visually-hidden">Current: </span>
            <span class="nav-menus-text__footer"><%= menu[1] %></span>
          </li>
        <%_ } else { _%>
          <li class="nav-menus-item__footer"><a href="<%= menu[2] %>"><%= menu[1] %></a></li>
        <%_ } _%>
      <%_ }); _%>
    </ul>
  </nav>
</footer>
